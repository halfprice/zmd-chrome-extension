{
  "manifest_version": 2,
  "name": "",
  "version": "0.1",

  "description": "A Chrome extension",
  "author": "Zhe Wu",

  "background" : {
    "scripts": ["js/zmd_background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "storage"],

  "omnibox": {
    "keyword" : "z"
  },

  "icons": {
    "16": "img/z_16.png",
    "48": "img/z_48.png",
    "128": "img/z_128.png"
  },

  "web_accessible_resources": [
    "img/*.png"
  ],
  "options_ui": {
    // Required.
    "page": "options.html",
    // Recommended.
    "chrome_style": true
  }
}
